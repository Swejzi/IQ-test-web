# Environment variables for IQ Test Web Application

# Database
DATABASE_URL="postgresql://iq_test_user:iq_test_password@localhost:5432/iq_test_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server
PORT=3001
NODE_ENV=development

# Frontend
REACT_APP_API_URL="http://localhost:3001/api"
REACT_APP_WS_URL="ws://localhost:3001"

# Admin emails (comma separated)
ADMIN_EMAILS="admin@iqtest.com,admin@example.com"

# Frontend URL (for CORS in production)
FRONTEND_URL="http://localhost:3000"

# Security
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET="your-session-secret-change-in-production"
SESSION_MAX_AGE=86400000

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Monitoring
SENTRY_DSN=""
ANALYTICS_ID=""

# Email (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@iqtest.com"

# External APIs
RECAPTCHA_SECRET_KEY=""
RECAPTCHA_SITE_KEY=""
